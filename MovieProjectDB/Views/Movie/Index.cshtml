@using MovieProjectDB.Models

@model IEnumerable<Movie>
@{
    Layout = "~/Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        body {
            background-image: url("/Images/landscape-1328858_1920.jpg");
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }
    </style>

</head>
<body>
    <table>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Category</th>
        </tr>
        @foreach (Movie item in Model)
        {
            <tr>
               <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Category</td>

            </tr>
        }




    </table>
</body>
</html>
